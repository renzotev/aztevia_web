@media (min-width 480px)
	.google-maps
		height 220px
	
	.block-green
		#message
			color #fff
			font-size 28px
			line-height 30px
			padding 15px
	
@media (min-width 768px)
	header
		.logo
			float left
		
		.navbar
			.navbar-collapse			
				.navbar-nav
					li
						width auto
						
						a
							text-align center
							padding 5px
							width 102px
							height 40px
							vertical-align middle
							line-height 13px
			
		.pink-line
			&.hidden
				display block !important
		
		.slogan
			padding 16px 0 15px 0
			margin-top 0
			float left

	.about-section
		.container
			.col-sm-10
				background-color rosado
				
	.google-maps
		height 330px
		
	.line-darkGray
		.col-xs-4
			.percent
				font-size 120px
				
			span
				font-size 36px
	
	.main-slider
		padding-top 159px


